import simpleaudio as sa

decision = str(input("Are there more than 2 genders? "))

clats = sa.WaveObject.from_wave_file("bruh1.wav")
sasha = sa.WaveObject.from_wave_file("meow.wav")

if decision == "yes" or decision == "Yes" or decision == "yes." or decision =="Yes.":
    print("WRONG")
elif decision == "no" or decision == "No":
    print("CORRECT")
elif decision == "sasha" or decision == "Sasha":
    print("T O E   B E A N")
    print("O")
    print("E")
    print("")
    print("B")
    print("E")
    print("A")
    print("N")
    print("")

elif decision == "cade" or decision == "Cade":
    print("Toe Tic Tac")
    print("M          O          W")
    play_obj = sasha.play()

elif decision == "cleets" or decision == "Cleets":
    print("Hahahaha...")
    print("It seems you have chosen...")
    print("")
    print("D E A T H?")
    for i in range(45):
        play_obj = clats.play()

else:
    print("Uhhh....")
    print("S")
    print("A")
    print("S")
    print("H")
    print("A")
    print("")
